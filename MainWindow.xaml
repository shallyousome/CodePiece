<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodePiece"
        xmlns:hc="https://handyorg.github.io/handycontrol" x:Class="CodePiece.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="497*"/>
            <ColumnDefinition Width="103*"/>
        </Grid.ColumnDefinitions>
        <Button Content="新增" HorizontalAlignment="Center" Height="31" Margin="0,21,0,0" VerticalAlignment="Top" Width="67" Click="Button_Click" RenderTransformOrigin="-2.396,0.505" Grid.Column="1"/>

        <hc:SideMenu x:Name="sideBar" HorizontalAlignment="Left" Width="127">
            <hc:SideMenuItem Header="Overview" Height="30" Width="50">
            </hc:SideMenuItem>

        </hc:SideMenu>
        <ListView d:ItemsSource="{d:SampleData ItemCount=5}" Margin="127,0,0,0" Height="385" VerticalAlignment="Center">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
